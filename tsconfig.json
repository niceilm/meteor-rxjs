{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es2015",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "chai",
      "underscore"
    ],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "files": [
    "node_modules/meteor-typings/1.3/main.d.ts",
    "node_modules/zone.js/dist/zone.js.d.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
